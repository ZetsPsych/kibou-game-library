<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zets.kibougamelibrary">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/controller"
        android:label="@string/app_name"
        android:logo="@drawable/controller"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.zets.kibougamelibrary.Activities.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zets.kibougamelibrary.Activities.MainActivity"
            android:icon="@drawable/icon" />
        <activity android:name="com.zets.kibougamelibrary.Activities.AddGameActivity" />
        <activity android:name="com.zets.kibougamelibrary.Activities.SettingsActivity" android:label="Settings"></activity>
    </application>

</manifest>